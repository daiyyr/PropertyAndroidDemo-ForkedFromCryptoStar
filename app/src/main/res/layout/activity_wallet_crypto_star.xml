        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/white_rect"
                android:layout_marginLeft="19.3dp"
                android:layout_marginRight="19.3dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="9dp"
                android:padding="19.2dp"

                android:onClick="NavigateToRent"
                >


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <customfonts.TextViewSFProDisplayRegular
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txt_color"
                        android:textSize="22.3sp"
                        android:text="Rent"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:src="@drawable/ic_house"/>


                        <customfonts.TextViewSFProDisplayRegular
                            android:id="@+id/icon_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Real Estate Agent"
                            android:layout_marginLeft="5dp"
                            android:textSize="16sp"
                            android:textColor="#6e7f8d"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <customfonts.TextViewSFProDisplayRegular
                            android:id="@+id/percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="10sp"
                            android:textColor="#17b978"/>


                        <customfonts.TextViewSFProDisplayRegular
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/txt_color"
                            android:textSize="17.3sp"
                            android:text="$450"/>
                    </LinearLayout>


                    <customfonts.TextViewSFProDisplayRegular
                        android:id="@+id/value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="8dp"
                        android:gravity="right"
                        android:text=""
                        android:textSize="10sp"
                        android:textColor="@color/light_gray"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/white_rect"
                android:layout_marginLeft="19.3dp"
                android:layout_marginRight="19.3dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="9dp"
                android:padding="19.2dp"

                android:onClick="NavigateToElectricity"
                >


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <customfonts.TextViewSFProDisplayRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txt_color"
                        android:textSize="22.3sp"
                        android:text="Electricity"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:src="@drawable/ic_flash"/>


                        <customfonts.TextViewSFProDisplayRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nova Energy"
                            android:layout_marginLeft="5dp"
                            android:textSize="16sp"
                            android:textColor="#6e7f8d"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <customfonts.TextViewSFProDisplayRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="10sp"
                            android:textColor="#17b978"/>


                        <customfonts.TextViewSFProDisplayRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/txt_color"
                            android:textSize="17.3sp"
                            android:text="$80"/>
                    </LinearLayout>


                    <customfonts.TextViewSFProDisplayRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="8dp"
                        android:gravity="right"
                        android:text=""
                        android:textSize="10sp"
                        android:textColor="@color/light_gray"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/white_rect"
                android:layout_marginLeft="19.3dp"
                android:layout_marginRight="19.3dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="9dp"
                android:padding="19.2dp"

                android:onClick="NavigateToBroadband"
                >


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <customfonts.TextViewSFProDisplayRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txt_color"
                        android:textSize="22.3sp"
                        android:text="Broadband"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:src="@drawable/ic_wifi"/>


                        <customfonts.TextViewSFProDisplayRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vodafone"
                            android:layout_marginLeft="5dp"
                            android:textSize="16sp"
                            android:textColor="#6e7f8d"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <customfonts.TextViewSFProDisplayRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="10sp"
                            android:textColor="#17b978"/>


                        <customfonts.TextViewSFProDisplayRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
